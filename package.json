{
  "name": "@locus-class/resolver",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "main": "dist/server.js",
  "types": "dist/server.d.ts",
  "scripts": {
    "build": "tsc -p tsconfig.build.json && mkdir -p dist/db && cp -r src/db/migrations dist/db/migrations",
    "typecheck": "tsc -p tsconfig.build.json --noEmit",
    "dev": "tsx watch src/server.ts",
    "start": "node dist/server.js",
    "db:migrate": "tsx src/db/migrate.ts up",
    "db:migrate:down": "tsx src/db/migrate.ts down",
    "seed": "tsx src/scripts/seed.ts"
  },
  "dependencies": {
    "@fastify/swagger": "^9.7.0",
    "@fastify/swagger-ui": "^5.2.5",
    "@types/node": "^25.2.3",
    "bcryptjs": "^3.0.2",
    "fastify": "^5.7.4",
    "jose": "^6.1.2",
    "pg": "^8.18.0",
    "typescript": "^5.4.0",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@types/pg": "^8.15.5",
    "tsx": "^4.21.0"
  }
}
